extends layout

block content
	h1= title
	p Welcome to #{title} upload screen
	br
	form#fileUpload(method="post" action="/uploadfile" enctype="multipart/form-data")
		label(for="payload") Select a file to upload:
		input#payload(type="file" name="dataitem" )
		br
		label(for="docType") File scope:
		br
		input#Element1(type="radio", name="scope", value="Private", checked=true)
		|Private
		br
		input#Element2(type="radio", name="scope", value="Public", checked=false)
		|Public
		br
		button#upload Upload