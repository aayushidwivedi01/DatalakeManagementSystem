html
  body
    script.
      function goBack(){
          window.history.back();
        }
    style.
      .menu-button { display:inline-block; }
      table {
      border-collapse: collapse;
      width: 100%;
      }
      th, td {
      text-align: left;
      padding: 8px;
      }
      tr:nth-child(even){background-color: #f2f2f2}
      th {
      background-color: #4CAF50;
      color: white;
      }
    br
    div
      .menu-button
        button(onclick='goBack()') Go Back
      .menu-button
        form(method='get', action='/upload')
          button#upload(type='submit', name='upload') Upload File
    table
      tr
        th User
        th Filename
        th Permission
        th Change Permission
      - if (classes.length) {
      each aClass in classes
        tr
          td=aClass.username
          td= aClass.id
          td= aClass.permission
          td
            form(method='post', action='/changepermission')
              input(type='hidden', name='filename', value=aClass.id)
              input(type='submit', value='Update')
        
          
      - }